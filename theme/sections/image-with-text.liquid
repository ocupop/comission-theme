{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.image_bleed
    if section.settings.order == 'order-first'
      assign bleed = ' lg:-ml-40'
    else
      assign bleed = ' lg:-mr-40'
    endif
  endif
  case section.settings.layout
    when 'layout_1'
      assign wrapper_class = 'items-center grid-cols-12 gap-20 lg:grid'
      assign text_column_class = 'image-with-text__textcolumn col-span-7 px-3'
      assign image_column_class = 'image-with-text__imagecolumn col-span-5'
    when 'layout_2'
      assign wrapper_class = 'grid grid-cols-1 gap-4 lg:grid-cols-10'
      assign text_column_class = 'image-with-text__textcolumn col-span-7 px-4'
      assign image_column_class = 'image-with-text__imagecolumn md:col-span-2 lg:col-span-3'
    when 'layout_3'
      assign wrapper_class = 'items-center grid-cols-12 gap-20 lg:grid'
      assign text_column_class = 'image-with-text__textcolumn col-span-5'
      assign image_column_class = 'image-with-text__imagecolumn col-span-7'
  endcase

  assign image_column_class = image_column_class | append: ' ' | append: section.settings.order | append: bleed
-%}

<div class="color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="{{ wrapper_class }}">
      <div class="{{ text_column_class }}">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h2
                class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </h2>
            {%- when 'copy' -%}
              <div class="image-with-text__copy rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.copy }}
              </div>
            {%- when 'button_group' -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="btn{% if block.settings.outline_button %} btn-outline{% else %} btn-primary{% endif %} my-5 mr-5"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
      <div class="{{ image_column_class }}">
        {{ section.settings.image | image_url: width: 1000 | image_tag: fetch_priority: fetch_priority }}
      </div>
    </div>
  </div>
</div>


    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "copy"
        },
        {
          "type": "button_group"
        }
      ]
    }
  ]

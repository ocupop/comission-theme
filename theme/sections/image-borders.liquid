{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div class="py-20 overflow-hidden bg-darker color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="flex items-center justify-between">
    <div class="w-16 -ml-10 lg:w-32 md:ml-0">
      <div
        class="bg-cover bg-center aspect-[1/4]"
        style="background-image: url({{ section.settings.image | image_url: width: 300 }});"
      ></div>
    </div>
    <div class="w-11/12 p-5 text-center text-white lg:w-1/2">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h2
              class="image-with-text__heading inline-richtext animate-slide {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </h2>
          {%- when 'copy' -%}
            <div class="image-with-text__copy rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              {{ block.settings.copy }}
            </div>
          {%- when 'button_group' -%}
            {%- if block.settings.button_label != blank -%}
              <a
                {% if block.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link }}"
                {% endif %}
                class="btn{% if block.settings.outline_button %} btn-outline{% else %} btn-primary{% endif %} my-5 mr-5"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
    <div class="w-16 -mr-10 lg:w-32 md:mr-0">
      <div
        class="bg-cover bg-center aspect-[1/4]"
        style="background-image: url(&quot;/images/comission-benefits-cta-02.jpg&quot;);"
      ></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-borders.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "t:sections.image-borders.blocks.image.name",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image-borders.blocks.image.settings.image.label"
        }
      ]
    },
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:sections.image-with-text.blocks.heading.settings.default",
          "label": "t:sections.image-with-text.blocks.heading.settings.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "default": "text-heading",
          "label": "t:sections.all.heading_size.label",
          "options": [
            {
              "value": "text-fineprint",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "text-body",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "text-lead",
              "label": "t:sections.all.heading_size.options__3.label"
            },
            {
              "value": "text-heading",
              "label": "t:sections.all.heading_size.options__4.label"
            },
            {
              "value": "text-display",
              "label": "t:sections.all.heading_size.options__5.label"
            }
          ]
        }
      ]
    },
    {
      "type": "copy",
      "name": "t:sections.image-with-text.blocks.copy.name",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "copy",
          "default": "t:sections.image-with-text.blocks.copy.settings.default",
          "label": "t:sections.image-with-text.blocks.copy.settings.label"
        },
        {
          "type": "select",
          "id": "text_style",
          "default": "text-default",
          "label": "t:sections.image-with-text.blocks.copy.settings.text_style.label",
          "options": [
            {
              "value": "text-default",
              "label": "t:sections.all.text_style.options__1.label"
            },
            {
              "value": "uppercase",
              "label": "t:sections.all.text_style.options__2.label"
            },
            {
              "value": "text-highlight",
              "label": "t:sections.all.text_style.options__3.label"
            }
          ]
        }
      ]
    },
    {
      "type": "button_group",
      "name": "t:sections.image-with-text.blocks.button_group.name",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "t:sections.image-with-text.blocks.button_group.settings.button_label.default",
          "label": "t:sections.image-with-text.blocks.button_group.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button_group.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "t:sections.image-with-text.blocks.button_group.settings.button_link.label"
        },
        {
          "type": "checkbox",
          "id": "outline_button_1",
          "default": false,
          "label": "t:sections.image-with-text.blocks.button_group.settings.outline_button.label"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "default": "t:sections.image-with-text.blocks.button_group.settings.button_label.default",
          "label": "t:sections.image-with-text.blocks.button_group.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button_group.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "t:sections.image-with-text.blocks.button_group.settings.button_link.label"
        },
        {
          "type": "checkbox",
          "id": "outline_button_2",
          "default": false,
          "label": "t:sections.image-with-text.blocks.button_group.settings.outline_button.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-borders.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "copy"
        },
        {
          "type": "button_group"
        }
      ]
    }
  ]
}
{% endschema %}

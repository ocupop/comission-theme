<div id="{{ section.settings.title | handle }}" class="container relative -mt-4 lg:-mt-8">
  <h2>{{ section.settings.title }}</h2>
</div>
<div class="slide-up active">
  <p class="mb-10 text-2xl">{{ section.settings.subtitle }}</p>
</div>

{% schema %}
{
  "name": "t:sections.home-collect.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "t:sections.home-collect.settings.title.default",
      "label": "t:sections.home-collect.settings.title.label"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "t:sections.home-collect.settings.subtitle.default",
      "label": "t:sections.home-collect.settings.subtitle.label"
    }
  ]
}
{% endschema %}

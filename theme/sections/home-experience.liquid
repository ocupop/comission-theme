{% render 'section-header',
  title: section.settings.title,
  subtitle: section.settings.subtitle,
  color_scheme: section.settings.color_scheme
%}
<div class="color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="grid items-center grid-cols-1 gap-10 py-10 lg:py-20 lg:grid-cols-2 lg:gap-40">
      <div>
        <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="">
      </div>
      <div class="text-body">
        {{ section.settings.description | newline_to_br }}
      </div>
    </div>
    <h3 class="lg:text-center text-2xl lg:text-3xl text-light mb-4">
      {{ section.settings.feature_grid_heading }}
    </h3>
    {% render 'feature-grid' %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.home-experience.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "t:sections.home-experience.settings.title.default",
      "label": "t:sections.home-experience.settings.title.label"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "t:sections.home-experience.settings.subtitle.default",
      "label": "t:sections.home-experience.settings.subtitle.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.home-experience.settings.image.label"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "t:sections.home-experience.settings.text.default",
      "label": "t:sections.home-experience.settings.text.label"
    },
    {
      "type": "text",
      "id": "feature_grid_heading",
      "default": "Each artwork includes a selection of these features:",
      "label": "Feature Grid Heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-2"
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "name": "Features",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Image alt text"
        }
      ]
    }
  ]
}
{% endschema %}

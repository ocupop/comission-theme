<div class="color-{{ section.settings.color_scheme }}">
  <div class="container py-16">
    <h2 class="text-5xl">{{ section.settings.title }}</h2>
    <div class="block lg:flex lg:flex-row gap-8">
      <div class="lg:w-2/3">
        <div class="description">
          {{ product.description }}
        </div>
        <div class="copyright my-6">
          <h6 class="font-bold">Copyright</h6>
          {{ product.metafields.comission.copyright }}
        </div>
        <div class="size my-6">
          <h6 class="font-bold">Size</h6>
          {{ product.metafields.comission.width.value -}}
          {{- product.metafields.comission.width.unit }} x {{ product.metafields.comission.height.value -}}
        </div>

        <ul class="provenance my-6">
          <h6 class="font-bold">History</h6>
          {% for item in product.metafields.comission.provenance.value -%}
            {% assign item_obj = item | split: '|' %}
            <li>
              <b>{{ item_obj[0] }}:</b> {{ item_obj[1] }}
            </li>
          {%- endfor -%}
        </ul>
      </div>
      <div class="lg:w-1/3">
        <img
          src="{{  product.featured_image | image_url: width: 608 }}"
          alt="{{ product.title }}"
          width="auto"
          height="auto"
          class="max-w-full"
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "t:sections.home-collect.settings.title.default",
      "label": "t:sections.home-collect.settings.title.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
